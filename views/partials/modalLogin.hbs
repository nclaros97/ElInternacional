{{!-- Modal LOGIN --}}
  <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100 font-weight-bold">Iniciar sesión</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body mx-3">
          <form method="POST" action="/iniciar-sesion">
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <input type="email" id="defaultForm-email" class="form-control validate" name="email" required>
              <label data-error="Inválido" data-success="Válido" for="defaultForm-email">usuario@correo.com</label>
            </div>

            <div class="md-form mb-4">
              <i class="fas fa-lock prefix grey-text"></i>
              <input type="password" id="defaultForm-pass" class="form-control validate" name="password" required>
              <label data-error="Inválido" data-success="Válido" for="defaultForm-pass">*******</label>
            </div>
            <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-default">Iniciar</button>
            </div>
          </form>
        </div>
        
      </div>
    </div>
  </div>
  {{!-- Fin Modal LOGIN  --}}